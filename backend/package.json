  "main": "index.js",
  "scripts": {
    "build": "npx -y tsc",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "dev": "nodemon --watch \"./src/**\" ./src/server.ts",
    "db:reset": "npx -y tsc && npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "compose:up": "cd .. && docker-compose up -d --build && cd backend && npm run db:reset",
    "test:unit": "mocha -r ts-node/register src/tests/unit/**/*.test.ts --exit -t 60000",
    "test:integration": "mocha -r ts-node/register src/tests/integration/*.test.ts --exit -t 60000",
    "test:coverage": "nyc npm run test:unit && nyc npm run test:integration"
  },
